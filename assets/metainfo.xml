<component type="desktop-application">
    <id>io.github.l0drex.wallpaper_splitter</id>
    
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0-only</project_license>
    
    <name>Wallpaper Splitter</name>
    <summary>Split wallpaper images for multi-monitor usage</summary>

    <developer id="io.github.l0drex">
        <name>Lorenz Hoffmann</name>
    </developer>

    <description>
        <p>
            This app detects the size and layout of your monitors 
            and cuts an image so it can be applied as a wallpaper spreading across your monitors.
            You can save the image to the disk (e.g., for slideshows) or directly apply it.
        </p>
    </description>

    <launchable type="desktop-id">io.github.l0drex.wallpaper_splitter.desktop</launchable>

    <requires>
        <control>keyboard</control>
        <control>pointing</control>
        <display_length compare="ge">768</display_length>
    </requires>
    
    <icon type="stock">io.github.l0drex.wallpaper_splitter</icon>
    
    <branding>
        <color type="primary" scheme_preference="light">#ccdffb</color>
        <color type="primary" scheme_preference="dark">#3e668e</color>
    </branding>

    <content_rating type="oars-1.1" />

    <url type="homepage">https://github.com/l0drex/wallpaper_splitter</url>
    <url type="bugtracker">https://github.com/l0drex/wallpaper_splitter/issues</url>
    <url type="contribute">https://github.com/l0drex/wallpaper_splitter</url>
    <url type="vcs-browser">https://github.com/l0drex/wallpaper_splitter</url>

    <screenshots>
